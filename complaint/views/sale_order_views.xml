<record id="view_order_form_inherit_complaint" model="ir.ui.view">
    <field name="name">sale.order.form.inherit.complaint</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <!-- Smart Button -->
        <xpath expr="//sheet" position="before">
            <button name="%(complaint_complaint_action)d" type="action"
                icon="fa-exclamation-circle"
                string="Reclamacions"
                class="oe_stat_button"
                attrs="{'invisible': [('complaint_ids', '=', False)]}">
                <field name="complaint_ids" widget="statinfo" />
            </button>
        </xpath>

        <!-- Add Complaint Section -->
        <xpath expr="//notebook" position="inside">
            <page string="Reclamacions">
                <field name="complaint_ids">
                    <tree editable="bottom">
                        <field name="name"/>
                        <field name="state"/>
                        <field name="create_date"/>
                    </tree>
                </field>
            </page>
        </xpath>
    </field>
</record>
