                <page string="Llista de Reclamacions">
                    <group>
                        <field name="complaint_ids" nolabel="1">
                            <list>
                                <field name="name" string="Assumpte"/>
                                <field name="state" string="Estat"/>
                                <field name="create_date" string="Data de CreaciÃ³"/>
                            </list>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>